@model ShoppingGames.Models.CityViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>
    
<h4>Departamento/Estado</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CountryId"/>
            <partial name="_State"/>
            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-success" />
                <a asp-action="Details" asp-route-id="@Model.CountryId" class="btn btn-outline-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
