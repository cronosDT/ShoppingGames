@model ShoppingGames.Data.Entities.State

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>Estas seguro de borrar este departamento/estado?</h3>
<div>
    <partial name="_StateDetails" />
    
    <form asp-action="DeleteState">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Country.Id" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger" />
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Regresar</a>
    </form>
</div>